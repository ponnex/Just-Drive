<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" android:key="useless_key">
    <PreferenceCategory android:title="General Setting">
        <SwitchPreference
            android:defaultValue="true"
            android:key="switch"
            android:summary="Enabled"
            android:title="Just Drive Services"
            android:enabled="true" />
    </PreferenceCategory>
    <PreferenceCategory android:title="Phone and Messaging">
        <SwitchPreference
            android:defaultValue="true"
            android:key="phone"
            android:summary="Read caller ID of incoming phone calls"
            android:title="Phone Calls" />
        <Preference android:title="Reply with SMS"
            android:enabled="true"
            android:key="replySMS"
            android:summary="Send incoming Calls and Text Messages with an SMS">
            <intent
                android:action="android.intent.action.MAIN"
                android:targetPackage="com.ponnex.justdrive"
                android:targetClass="com.ponnex.justdrive.ReplySMSActivity" />
        </Preference>
    </PreferenceCategory>
    <PreferenceCategory android:title="Other">
        <Preference android:title="Theme"
            android:key="theme"
            android:summary="Select Theme" />
        <SwitchPreference
            android:defaultValue="true"
            android:key="startonboot"
            android:summary="Start service on boot"
            android:title="Run On Startup" />
    </PreferenceCategory>
    <PreferenceCategory android:title="DEBUGGING MODE">
        <SwitchPreference
            android:defaultValue="false"
            android:key="notification"
            android:summary="Show notifications of activities"
            android:title="Notify" />
        <Preference android:title="Activity Log"
            android:enabled="true"
            android:key="debuggingmode"
            android:summary="Show setting and activity log">
            <intent
                android:action="android.intent.action.MAIN"
                android:targetPackage="com.ponnex.justdrive"
                android:targetClass="com.ponnex.justdrive.DebuggingActivity" />
        </Preference>
    </PreferenceCategory>
</PreferenceScreen>